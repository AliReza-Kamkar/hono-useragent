{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
